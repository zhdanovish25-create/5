#include <Wire.h>
#include <LiquidCrystal_I2C.h>  // или другой библиотеки для вашего дисплея

// Если дисплей на пинах 8,7,6 — это не I2C, а параллельный
// Уточните модель дисплея для точного кода

// Для примера предположим, что это I2C дисплей
LiquidCrystal_I2C lcd(0x27, 16, 2); // адрес 0x27, 16x2

const int photoPin = A0;

void setup() {
  Serial.begin(9600);
  
  // Инициализация дисплея
  lcd.init();
  lcd.backlight();
  lcd.setCursor(0, 0);
  lcd.print("Luxmeter");
  
  delay(1000);
}

void loop() {
  int sensorValue = analogRead(photoPin);
  float voltage = sensorValue * (5.0 / 1023.0);
  
  // Вывод в Serial
  Serial.print("ADC: ");
  Serial.print(sensorValue);
  Serial.print(" Voltage: ");
  Serial.print(voltage);
  Serial.println(" V");
  
  // Вывод на дисплей
  lcd.setCursor(0, 0);
  lcd.print("ADC: ");
  lcd.print(sensorValue);
  lcd.print("    "); // очистка хвоста
  
  lcd.setCursor(0, 1);
  lcd.print("V: ");
  lcd.print(voltage);
  lcd.print("    ");
  
  delay(1000);
}
